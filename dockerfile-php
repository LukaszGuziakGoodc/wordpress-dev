FROM php:8.2-fpm

# Instalujemy biblioteki systemowe, których wymagają moduły PHP
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    libzip-dev \
    libicu-dev \
    libmagickwand-dev \
    --no-install-recommends

# Konfigurujemy i instalujemy rozszerzenia PHP
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install pdo pdo_mysql mysqli gd zip intl exif

# Imagick jest specyficzny - instalujemy go przez PECL (repozytorium rozszerzeń PHP)
RUN pecl install imagick \
    && docker-php-ext-enable imagick

COPY --from=composer:2 /usr/bin/composer /usr/local/bin/composer

# --- Zwiększenie limitów PHP dla WordPressa ---
RUN echo "upload_max_filesize=64M" > /usr/local/etc/php/conf.d/wordpress-limits.ini \
    && echo "post_max_size=64M" >> /usr/local/etc/php/conf.d/wordpress-limits.ini \
    && echo "memory_limit=256M" >> /usr/local/etc/php/conf.d/wordpress-limits.ini \
    && echo "max_execution_time=300" >> /usr/local/etc/php/conf.d/wordpress-limits.ini